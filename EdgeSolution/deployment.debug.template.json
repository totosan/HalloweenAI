{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "iotcontainertt": {
                "username": "${CONTAINER_REGISTRY_USERNAME}",
                "password": "${CONTAINER_REGISTRY_PASSWORD}",
                "address": "iotcontainertt.azurecr.io"
              },
              "docker": {
                "username": "${CONTAINER_REGISTRY_USERNAME_docker}",
                "password": "${CONTAINER_REGISTRY_PASSWORD_docker}",
                "address": "docker.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "redisStore": {
            "version": "1.1",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "redis:alpine",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "6379/tcp": [
                      {
                        "HostPort": "6380"
                      }
                    ]
                  }
                }
              }
            }
          },
          "VideoModule": {
            "version": "${VERS_VIDEO_MODULE}",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.VideoModule.debug}",
              "createOptions": {
                "Env": [
                  "VIDEO_PATH=${VIDEO_PATH}"
                ],
                "ExposedPorts": {
                  "5678/tcp": {},
                  "8080/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5678/tcp": [
                      {
                        "HostPort": "5678"
                      }
                    ],
                    "8080/tcp": [
                      {
                        "HostPort": "8080"
                      }
                    ]
                  },
                  "Devices": [
                    {
                      "PathOnHost": "/dev/video0",
                      "PathInContainer": "/dev/video0",
                      "CgroupPermissions": "rwm"
                    }
                  ]
                }
              }
            }
          },
          "faceserverModule": {
            "version": "${VERS_FACESERVER_MODULE}",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.faceserverModule.debug}",
              "createOptions": {
                "Env":[
                  "FACE_API_KEY=${FACE_API_KEY}",
                  "FACE_API_ENDPOINT=${FACE_API_ENDPOINT}",
                  "FACEAPI_USED=True"
                ],
                "ExposedPorts": {
                  "5679/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "5678/tcp": [
                      {
                        "HostPort": "5679"
                      }
                    ]
                  }
                }
              }
            }
          },
          "FaceViewer": {
            "version": "${VERS_FACEVIEWER_MODULE}",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.FaceViewer.debug}",
              "createOptions": {
                "Env": [
                  "REDIS_CONN_STR=${REDIS_HOST}",
                  "REDIS_KEY=${REDIS_KEY}"
                ],
                "ExposedPorts": {
                  "443/tcp": {},
                  "80/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "80/tcp": [
                      {
                        "HostPort": "8081"
                      }
                    ],
                    "444/tcp": [
                      {
                        "HostPort": "4434"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "VideoModuleToIoTHub": "FROM /messages/modules/VideoModule/outputs/* INTO $upstream",
          "faceserverModuleToIoTHub": "FROM /messages/modules/faceserverModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}